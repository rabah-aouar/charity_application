<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".home"
        tools:layout_editor_absoluteY="41dp">

        <Button
            android:id="@+id/logout"
            android:layout_width="128dp"
            android:layout_height="50dp"
            android:layout_marginTop="600dp"
            android:layout_marginEnd="140dp"
            android:layout_marginRight="140dp"
            android:background="@drawable/rounded_corner"
            android:text="log out"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/date_naissance"
            android:layout_width="245dp"
            android:layout_height="42dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="72dp"
            android:layout_marginRight="72dp"
            android:background="@drawable/rounded_corner"
            android:drawableRight="@drawable/ic_calendar"
            android:ems="10"
            android:hint="date de naissance"
            android:inputType="date"
            android:padding="10dp"
            android:paddingLeft="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/num_phone" />

        <EditText
            android:id="@+id/prenom"
            android:layout_width="245dp"
            android:layout_height="42dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="72dp"
            android:layout_marginRight="72dp"
            android:background="@drawable/rounded_corner"
            android:drawableRight="@drawable/ic_identity"
            android:ems="10"
            android:hint="prenom"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:paddingLeft="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nom" />

        <EditText
            android:id="@+id/num_phone"
            android:layout_width="245dp"
            android:layout_height="42dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="72dp"
            android:layout_marginRight="72dp"
            android:background="@drawable/rounded_corner"
            android:drawableRight="@drawable/ic_phone"
            android:ems="10"
            android:hint="numero de telephone"
            android:inputType="phone"
            android:padding="10dp"
            android:paddingLeft="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prenom" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="97dp"
            android:layout_height="48dp"
            android:layout_marginTop="472dp"
            android:background="@drawable/rounded_corner"
            android:popupBackground="@drawable/rounded_corner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.77"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nom"
            android:layout_width="245dp"
            android:layout_height="42dp"
            android:layout_marginTop="188dp"
            android:layout_marginEnd="72dp"
            android:layout_marginRight="72dp"
            android:background="@drawable/rounded_corner"
            android:drawableRight="@drawable/ic_identity"
            android:ems="10"
            android:hint="nom"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:paddingLeft="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="36dp"
            android:layout_height="34dp"
            android:layout_marginTop="472dp"
            android:layout_marginEnd="72dp"
            android:layout_marginRight="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_drop_down" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="126dp"
            android:layout_height="47dp"
            android:layout_marginTop="472dp"
            android:layout_marginEnd="170dp"
            android:layout_marginRight="170dp"
            android:gravity="center"
            android:text="groupage :"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <AutoCompleteTextView
            android:id="@+id/grp"
            android:layout_width="140dp"
            android:layout_height="42dp"
            android:layout_marginTop="103dp"
            android:layout_marginEnd="140dp"
            android:layout_marginRight="140dp"
            android:background="@drawable/rounded_corner"
            android:completionThreshold="1"
            android:gravity="center"
            android:hint="groupage"
            android:inputType="textAutoComplete"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>